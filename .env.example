# Domain Configuration
DOMAIN=yourdomain.com
SUBDOMAIN=api-qa
ACME_EMAIL=your-email@yourdomain.com

# Database Configuration (External)
DATABASE_URL=postgresql://username:password@external-db-host:5432/database_name

# Redis Configuration (External)
REDIS_HOST=external-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password

# Mono API Configuration
MONO_BASE_URL=https://api.withmono.com/v2
MONO_SECRET_KEY=your-mono-secret-key

# Firebase Configuration
FIREBASE_ADMIN_SDK_JSON_PATH=/app/firebase_service.json

# Plaid Configuration
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENV=sandbox
PLAID_BASE_URL_SANDBOX=https://sandbox.plaid.com
PLAID_BASE_URL_DEVELOPMENT=https://development.plaid.com
PLAID_BASE_URL_PRODUCTION=https://production.plaid.com

# Exchange Rate API Configuration
EXCHANGE_API_KEY=your-exchange-api-key
EXCHANGE_RATE_BASE_URL=https://v6.exchangerate-api.com/v6/
